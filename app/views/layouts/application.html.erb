<!DOCTYPE html>
<html>
<head>
  <title>CoderTicket</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-fixed-top navbar-dark bg-inverse">
    <a class="navbar-brand" href="<%= root_path %>">Coder Ticket</a>
    <ul class="nav navbar-nav">
       <% if current_user %>
    <li class="nav-item">
      <%= link_to 'View Profile', users_path(current_user.id), method: 'get', class: 'nav-link' %>
    </li>
    <li class="nav-item">
    <%= link_to "Log out #{current_user.email}", logout_path, method: 'delete', class: 'nav-link' %>
    </li>

    <li class="nav-item">
    <%= link_to "Create an event", new_event_path, method: 'get', class: 'nav-link' %>
    </li>

    <li class="nav-item">
    <%= link_to "New venue", new_venue_path, method: 'get', class: 'nav-link' %>
    </li>

  <% else %>
    <li class="nav-item">
      <%= link_to "Create an account", new_user_path, class: 'nav-link' %>
    </li>
    <li class="nav-item">
      <%= link_to "Login", new_session_path, class: 'nav-link' %> 
    </li>
    <% end %>
    </ul>
  </nav>  

<%= yield %>

</body>
</html>
